{
  "hosting": {
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "run": {
          "serviceId": "remix-firebase-tutorial-sample",
          "region": "asia-northeast1"
        }
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "rm -rf node_modules",
        "pnpm install",
        "pnpm functions lint",
        "pnpm build:shared",
        "pnpm shared pack --pack-destination ../../functions",
        "pnpm functions add ./local-shared-1.0.0.tgz",
        "pnpm functions build"
      ],
      "postdeploy": [
        "rm -rf functions/local-shared-1.0.0.tgz",
        "pnpm functions remove @local/shared",
        "pnpm functions add @local/shared"
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  }
}
